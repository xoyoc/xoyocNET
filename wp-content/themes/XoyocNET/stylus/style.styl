@import url("http://fonts.googleapis.com/css?family=Cabin+Condensed:400,700")
@import "normalize"
@import "skeleton"
@import "fonts"
@import "nib"

azulfuerte=#0C4271
verdepalido=#5F9442
azulclaro=#C1DFFD
azulmarino=#240BB3

@keyframes aparecion
	0%
		opacity 0
	100%
		opacity 1
@keyframes apizq
	0%
		opacity 0
		left -100%
	100%
		opacity 1
		left 0
@keyframes dobleclick
	40%
		transform scale(1.1)
	20%, 60%
		transform scale(0.8)

.centrado-flex
	display flex
	justify-content space-around
	align-items center
.container__item
	figure
		img
			height auto
			width 80%
.error
	color red 
	text-align center
body
	animation 1s aparecion linear
	background url(../img/fondo.jpg) fixed
	font-family 'Cabin Condensed', sans-serif
	padding 2em
ul
	margin-bottom 0
small
	font-size 1rem
	color gray 
.encabezado
	width 100%
	height 100%
 	.encabezado__logo--imagen
		width 220px
		height 125px
	.menu-movil
		background: rgba(azulfuerte,.2)
		nav
			width 95%
	.menu-movil--boton
		font-size 2rem
		display none
header nav ul
	display flex
	justify-content space-around
	align-items center
	list-style none
header nav ul li a
	display block
	color white
	font-size 2em
	text-decoration none
	padding .5em
	border-bottom solid .1em transparent
	&:hover
		animation 1s dobleclick 1
		background-color rgb(95,148,66)
		border-bottom solid .1em white
		color black
.contenido
	background-color rgba(193,223,253,.8)
	font-size 1.9rem
	padding .5em
	overflow hidden
	.contenido--contenedor
		width 90%
	.contenido--imagen
		margin 0 1em
		height 60%
		width 60%
		float left
.pie-pagina
	background-color rgba(azulfuerte,.6)
	.pie-pagina__formulario--contenedor
		height 10em
		.btn-b
			background-color azulmarino
			color white
			&:hover
				animation 1s dobleclick 1
				background-color verdepalido
				color black
	.pie-pagina__formulario--campo-texto
		border-radius .3em
		margin 1em .5em
	.pie-pagina__formulario--area-texto
		border-radius .3em
		margin 0 .5em
.animacion
	-webkit-transition all .3s ease-out
	transition all .3s ease-out
.container__item 
	display inline-block
	width 30%
	vertical-align top
	background-color #e6e6e6
	border 1px solid #bfbfbf
	border-radius 2px
	padding 12px

@media screen and (max-width: 800px)
	body
		font-size 18px
		padding 0
		margin 0
	.container
		margin 0
		padding 0
		width 100%
	.encabezado, .contenido, .pie-pagina
		margin 0
	.encabezado__logo--imagen
		width 130px
		height 100px
	.menu-movil
		display block
		background-color rgb(12,66,113)
		width 50%
		height 100%
		left -100%
		margin 0
		position fixed
	.encabezado__logo--imagen
		float none
	header nav ul
		display inline-block
		width 80%
	header nav ul li
		border-bottom solid .1em white
		display block
		width 100%
	header nav ul li a
		font-size 1.8rem
	.menu-movil--boton
		display block
		width 100%
	.menu-movil--boton .boton__barra
		display block
		padding 1em
		background-color rgb(12,66,113)
		color white
		text-decoration none
		font-weight bold
		-webkit-box-sizing border-box
		box-sizing border-box
	.menu-movil--boton span
		float right
		font-size 2rem
	.container__item 
		display block
		width 96vw
		margin-bottom .5em
	.pie-pagina
		.pie-pagina__formulario--contenedor
			height 19em
			width 95vw
			.pie-pagina__formulario--area-texto, .btn-b
				margin 1em .5em
	