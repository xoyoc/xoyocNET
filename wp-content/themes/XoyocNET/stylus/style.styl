@import url("http://fonts.googleapis.com/css?family=Cabin+Condensed:400,700")
@import "fonts"
@import "normalize"
@import "skeleton"

azulfuerte=#0C4271
verdepalido=#5F9442
azulclaro=#C1DFFD
azulmarino=#240BB3

.centrado-flex
	display flex
	justify-content space-around
	align-items center

body
	background url(../img/fondo.jpg) fixed
	font-family 'Cabin Condensed', sans-serif
	font-size 16px
	padding 2em
ul
	margin-bottom 0
.encabezado
	width 100%
	height 100%
 	.encabezado__logo--imagen
		width 220px
		height 125px
	.menu-movil
		background: rgba(azulfuerte,.2)
	.menu-movil--boton
		font-size 2em
		display none
header nav ul
	display flex
	justify-content space-around
	align-items center
	list-style none
header nav ul li a
	display block
	color white
	font-size 2em
	text-decoration none
	padding .5em
	border-bottom solid .1em transparent
	&:hover
		background-color rgb(95,148,66)
		border-bottom solid .1em white
.contenido
	background-color rgba(193,223,253,.8)
	font-size 1.5em
	padding .5em
	overflow hidden
	.contenido--contenedor
		width 90%
	.contenido--imagen
		margin 0 1em
		height 60%
		width 60%
		float left
.pie-pagina
	background-color rgba(azulmarino,.6)
	.pie-pagina__formulario--contenedor
		margin auto
		.btn-b
			background-color verdepalido
	.pie-pagina__formulario--campo-texto
		border-radius .3em
		margin 1em .5em
	.pie-pagina__formulario--area-texto
		border-radius .3em
		margin-top .5em
.animacion
	-webkit-transition all .3s ease-out
	transition all .3s ease-out

@media screen and (max-width: 800px)
	body
		padding 0
		margin 0
	.container
		margin 0
		width 100%
	.encabezado, .contenido, .pie-pagina
		margin 0
	.encabezado__logo--imagen
		width 150px
		height 50px
	.menu-movil
		display block
		background-color rgb(12,66,113)
		width 60%
		height 100%
		left -100%
		margin 0
		position fixed
	.encabezado__logo--imagen
		float none
	header nav ul
		display inline-block
		width 80%
	header nav ul li
		border-bottom solid .1em white
		display block
		width 100%
	header nav ul li a
		font-size 1em
	.menu-movil--boton
		display block
		width 100%
	.menu-movil--boton .boton__barra
		display block
		padding 1em
		background-color rgb(12,66,113)
		color white
		text-decoration none
		font-weight bold
		-webkit-box-sizing border-box
		box-sizing border-box
	.menu-movil--boton span
		float right
		font-size 1em